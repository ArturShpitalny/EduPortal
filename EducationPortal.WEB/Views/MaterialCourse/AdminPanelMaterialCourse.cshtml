@using EducationPortal.WEB.Models.ViewModel;
@using EducationPortal.Core.Models.Entities;
@model EntityIndexModel<IEnumerable<Material>>

@{
    ViewBag.Title = "AdminPanelMaterialCourse";
    Layout = "~/Views/Shared/_AdminMainPageLayout.cshtml";
}

<div class="col-md-12 offset-md-0">
    <div class="row justify-content-center my-3">
        <div class="col-12">
            <div class="col-11 mx-auto mx-lg-auto my-2">
                <div class="row justify-content-center justify-content-md-start h-100">
                    <h5 class="text-center text-md-right text-uppercase">Редактор материалов курса</h5>
                </div>
            </div>

            <div class="col-11 mx-auto mx-lg-auto my-2">
                <div class="row justify-content-center justify-content-md-start h-100">
                    <a class="btn btn-outline-success" title="Добавить материал" href="@Url.Action("AddCourseMaterialsList", "Material", new { courseId = Model.Index })">
                        <i class="fa fa-plus-square fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>

        <div id="page" class="col-12">
            @foreach (var item in Model.Entity)
            {
                <div id="@item.Id" class="border rounded bg-white col-11 mx-auto mx-lg-auto my-2 min-height-100px">
                    <div class="row d-flex justify-content-between min-height-100px h-100">
                        <div class="col-12 col-lg-1 mx-auto mx-lg-0 my-3 my-lg-auto">
                            <div class="row justify-content-center">
                                <h5 title="ID">@Html.DisplayFor(modelItem => item.Id)</h5>
                            </div>
                        </div>
                        <div class="col-12 col-lg-7 mx-auto mx-lg-auto my-2 my-lg-auto text-center text-lg-left">
                            <h5 title="Название">@Html.DisplayFor(modelItem => item.MaterialName)</h5>
                        </div>
                        <div class="col-12 col-lg-4 mx-auto mx-lg-auto my-3 my-lg-auto right">
                            <div class="row justify-content-center">
                                <a class="btn btn-outline-warning mb-0 mx-1" title="Редактировать материал" href="@Url.Action("EditMaterial", "Material", new { materialId = item.Id })">
                                    <i class="fa fa-pencil fa-lg"></i>
                                </a>
                                <a class="btn btn-outline-primary mb-0 mx-1" title="Материал вверх" href="@Url.Action("MaterialPositionInCourseUp", "MaterialCourse", new { courseId = Model.Index, materialId = item.Id })">
                                    <i class="fa fa-angle-double-up" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-outline-primary mb-0 mx-1" title="Материал вниз" href="@Url.Action("MaterialPositionInCourseDown", "MaterialCourse", new { courseId = Model.Index, materialId = item.Id })">
                                    <i class="fa fa-angle-double-down" aria-hidden="true"></i>
                                </a>
                                <button materialId="@item.Id" courseId="@Model.Index" title="Удалить материал из курса" class="remove-material-btn btn btn-danger mb-0 mx-1">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
